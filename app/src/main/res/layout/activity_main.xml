<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchByFlower"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to FlowerDict!"
        android:textSize="30sp"
        android:textStyle="bold"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FlowerDict is a free dictionary for flower meanings\nBased on the Language of Flowers by Kate Greenaway."
        android:layout_gravity="center_horizontal"
        android:paddingBottom="40sp"/>
    <AutoCompleteTextView
        android:id="@+id/search_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search by typing in the name of a flower..."
        android:layout_gravity="center_horizontal" />
    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_gravity="center_horizontal"
        android:onClick="search" />
    <Button
        android:id="@+id/switch_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find by definition"
        android:layout_gravity="center_horizontal"
        android:onClick="switchSearch" />

</android.widget.LinearLayout>